<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.helpmevishal.spinthebotttleanywhere.About">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3B5999"
        android:id="@+id/about_relativeLayout">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:weightSum="5"
            android:orientation="horizontal"
            android:id="@+id/myname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_developer"
                android:layout_width="28dp"
                android:layout_height="28dp" />

            <TextView
                android:gravity="left"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Vishal Singh"
                android:textColor="#FFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:weightSum="3"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/about_mail"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_mail"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
                <ImageView
                    android:id="@+id/about_whatsapp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_whatsapp"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
                <ImageView
                    android:id="@+id/about_call"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/myname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_vishal"
                android:id="@+id/pic_vishal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_college"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_school_white_24dp"
                android:layout_toRightOf="@+id/pic_vishal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Studies B.Tech Computer Science Engineering at Chandigarh Group of Colleges, Mohali, Punjab, India."
                android:textColor="#DFE3EF"
                android:id="@+id/name_college"
                android:textSize="14sp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignTop="@+id/ic_college"
                android:layout_toRightOf="@+id/ic_college"
                android:layout_toEndOf="@+id/ic_college" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ic_home"
                android:src="@drawable/ic_home_white_24dp"
                android:layout_alignTop="@+id/name_home"
                android:layout_toLeftOf="@+id/name_college"
                android:layout_toStartOf="@+id/name_college" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Saheed Bhagat Singh Nagar, Punjab, India."
                android:textColor="#DFE3EF"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:gravity="left"
                android:paddingRight="10dp"
                android:id="@+id/name_home"
                android:layout_below="@+id/pic_vishal"
                android:layout_toRightOf="@+id/ic_home"
                android:layout_toEndOf="@+id/ic_home" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ic_gplus"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_gplus"
                android:layout_alignBottom="@+id/name_home"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/ic_linkedin"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_linkedin"
                android:layout_alignTop="@+id/ic_gplus"
                android:layout_toRightOf="@+id/ic_gplus"
                android:layout_toEndOf="@+id/ic_gplus" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:id="@+id/ic_twitter"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_twitter_about"
                android:layout_alignTop="@+id/ic_linkedin"
                android:layout_toRightOf="@+id/ic_linkedin"
                android:layout_toEndOf="@+id/ic_linkedin" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/about_relativeLayout"
        android:id="@+id/about_app"
        android:background="#3B5999"
        android:padding="10dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_app"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_weight="4.5"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FFF"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Spin the Bottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:textColor="#DFE3EF"
                android:paddingLeft="5dp"
                android:text="A Party Game or Play Anywhere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_share"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@id/about_app"
        android:padding="10dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_share"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Share with friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_feedback"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/about_share"
        android:padding="10dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/ic_mail"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Send us Feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>
