<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_spin_the_bottle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_carpet"
    tools:context="com.wordpress.helpmevishal.spinthebotttleanywhere.SpinTheBottleActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_table_one"
        android:layout_centerHorizontal="true"
        android:layout_height="300dp"
        android:id="@+id/iv_Table" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_bottle_nine"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/iv_bottle"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/bt_spin"
        android:layout_below="@+id/iv_Table"
        android:src="@drawable/ic_spin_bottle"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/ic_rack"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp">

        <ImageView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_bottle_nine"
            android:layout_marginTop="25dp"
            android:id="@+id/select_bottle" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_table_one"
            android:layout_marginTop="23dp"
            android:id="@+id/select_table" />

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_carpet_three"
            android:id="@+id/select_carpet" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_about"
        android:id="@+id/iv_about"
        android:layout_alignTop="@+id/iv_Table"
        android:layout_alignRight="@+id/iv_Table"
        android:layout_alignEnd="@+id/iv_Table" />
</RelativeLayout>
